//This is bound to the build button combo (Ctrl-Shift-B) and runs a batch file that updates the backend JSON for us
{
    "label": "Update Backend",
    "type": "shell",
    "command": "update_backend.bat",
    "presentation": {"echo": true, "reveal": "always", "focus": false, "panel": "shared", "showReuseMessage": false, "clear": true},
    "group": {"kind": "build", "isDefault": true},
}